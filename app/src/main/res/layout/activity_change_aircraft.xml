<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeAircraft">

    <EditText
        android:id="@+id/aircraft_name_field"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:hint="Aircraft Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <EditText
        android:id="@+id/aircraft_status_field"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:hint="Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aircraft_capacity_field">

    </EditText>

    <EditText
        android:id="@+id/aircraft_location_field"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:hint="Location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aircraft_name_field">

    </EditText>

    <EditText
        android:id="@+id/aircraft_capacity_field"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:hint="Max Capacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aircraft_departure_field">

    </EditText>

    <EditText
        android:id="@+id/aircraft_departure_field"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:hint="Departure Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aircraft_location_field">

    </EditText>

    <Button
        android:id="@+id/update_aircraft_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Update Aircraft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aircraft_status_field"
        app:layout_constraintVertical_bias="0.007" />

</androidx.constraintlayout.widget.ConstraintLayout>